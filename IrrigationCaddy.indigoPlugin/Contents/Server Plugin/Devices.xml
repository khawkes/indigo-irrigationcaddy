<?xml version="1.0"?>
<Devices>
	<!-- ========================================================================= -->
	<Device type="custom" id="irrigationCaddy">
		<Name>Irrigation Caddy</Name>
		<ConfigUI>
			<Field id="address" type="textfield">
				<Label>Module Address:</Label>
			</Field>
			<Field id="useAuthentication" type="checkbox" defaultValue="false">
				<Label>Use authentication:</Label>
			</Field>
			<Field id="username" type="textfield">
				<Label>Username:</Label>
			</Field>
			<Field id="password" type="textfield">
				<Label>Password:</Label>
			</Field>
		</ConfigUI>
		<UiDisplayStateId>running</UiDisplayStateId>
		<States>
			<State id="active">
				<ValueType boolType="YesNo">Boolean</ValueType>
				<TriggerLabel>System Active</TriggerLabel>
				<ControlPageLabel>System Active</ControlPageLabel>
			</State>
			<State id="running">
				<ValueType boolType="YesNo">Boolean</ValueType>
				<TriggerLabel>System Currently Running</TriggerLabel>
				<ControlPageLabel>System Currently Running</ControlPageLabel>
			</State>
			<State id="zoneNumber">
				<ValueType>Number</ValueType>
				<TriggerLabel>Zone Running</TriggerLabel>
				<ControlPageLabel>Zone Running</ControlPageLabel>
			</State>
			<State id="zoneName">
				<ValueType>String</ValueType>
				<TriggerLabel>Zone Name Running</TriggerLabel>
				<ControlPageLabel>Zone Name Running</ControlPageLabel>
			</State>
			<State id="zoneSecondsLeft">
				<ValueType>Number</ValueType>
				<TriggerLabel>Seconds Left Running Zone</TriggerLabel>
				<ControlPageLabel>Seconds Left Running Zone</ControlPageLabel>
			</State>
			<State id="zoneTimeLeft">
				<ValueType>String</ValueType>
				<TriggerLabel>Zone Time Remaining</TriggerLabel>
				<ControlPageLabel>Zone Time Remaining</ControlPageLabel>
			</State>
			<State id="programNumber">
				<ValueType>Number</ValueType>
				<TriggerLabel>Program Running</TriggerLabel>
				<ControlPageLabel>Program Running</ControlPageLabel>
			</State>
			<State id="programSecondsLeft">
				<ValueType>Number</ValueType>
				<TriggerLabel>Seconds Left Running Program</TriggerLabel>
				<ControlPageLabel>Seconds Left Running Program</ControlPageLabel>
			</State>
			<State id="programTimeLeft">
				<ValueType>String</ValueType>
				<TriggerLabel>Program Time Remaining</TriggerLabel>
				<ControlPageLabel>Program Time Remaining</ControlPageLabel>
			</State>
			<State id="raining">
				<ValueType boolType="YesNo">Boolean</ValueType>
				<TriggerLabel>Currently Raining</TriggerLabel>
				<ControlPageLabel>Currently Raining</ControlPageLabel>
			</State>
			<State id="maxZones">
				<ValueType>Number</ValueType>
				<TriggerLabel>Maximum Zones</TriggerLabel>
				<ControlPageLabel>Maximum Zones</ControlPageLabel>
			</State>
			<State id="rainSensor">
				<ValueType boolType="OnOff">Boolean</ValueType>
				<TriggerLabel>Rain Sensor Enabled</TriggerLabel>
				<ControlPageLabel>Rain Sensor Enabled</ControlPageLabel>
			</State>
		</States>
	</Device>
</Devices>
