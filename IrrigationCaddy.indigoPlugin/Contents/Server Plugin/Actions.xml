<?xml version="1.0"?>
<Actions>
	<Action id="activateSystem" deviceFilter="self">
		<Name>Activate System</Name>
		<CallbackMethod>actionActivateSystem</CallbackMethod>
	</Action>
	<Action id="deactivateSystem" deviceFilter="self">
		<Name>Deactivate System</Name>
		<CallbackMethod>actionDeactivateSystem</CallbackMethod>
	</Action>
	<Action id="nextZone" deviceFilter="self">
		<Name>Next Zone</Name>
		<CallbackMethod>actionNextZone</CallbackMethod>
	</Action>
	<Action id="stopProgram" deviceFilter="self">
		<Name>Stop Current Program</Name>
		<CallbackMethod>actionStopProgram</CallbackMethod>
	</Action>
	<Action id="runProgram" deviceFilter="self">
		<Name>Run Program</Name>
		<CallbackMethod>actionRunProgram</CallbackMethod>
		<ConfigUI>
			<Field type="textfield" id="programNum">
				<Label>Program Number:</Label>
			</Field>
		</ConfigUI>
	</Action>
</Actions>
